{
    "name": "omalizadeh/laravel-sms",
    "description": "A driver-based laravel package for sending messages via online sms providers",
    "homepage": "https://github.com/omalizadeh/laravel-sms",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "php",
        "sms",
        "message",
        "kavenegar",
        "payamak"
    ],
    "authors": [
        {
            "name": "Omid Alizadeh",
            "email": "om.alizadeh1@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5",
        "illuminate/http": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "orchestra/testbench": "^9.15 || ^10.6"
    },
    "autoload": {
        "psr-4": {
            "Omalizadeh\\SMS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omalizadeh\\SMS\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Omalizadeh\\SMS\\Providers\\SMSServiceProvider"
            ],
            "aliases": {
                "SMS": "Omalizadeh\\SMS\\Facades\\SMS"
            }
        }
    },
    "scripts": {
        "test": "phpunit --color=always",
        "cs-check": "php-cs-fixer fix -v --dry-run --show-progress=dots",
        "cs-fix": "php-cs-fixer fix -v --show-progress=dots"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
